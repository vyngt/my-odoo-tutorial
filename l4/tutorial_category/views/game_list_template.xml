<odoo>
    <template id="game_list_extended" name="Extending Game List" inherit_id="tutorial.game_list_template">
        <!-- Add text -->
        <xpath expr="//span[@t-field='game.released_date']" position="before">
            <span>(
                <t t-foreach="game.tag_ids" t-as="tag">
                    <b>
                        <span style="color:green" t-field="tag.name" />
                    </b>
                </t>
                )
            </span>
        </xpath>
    </template>
</odoo>